{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "../../dist/server",
    "rootDir": "../..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler"
  },
  "include": ["src/server/src/**/*"],
  "exclude": ["node_modules"]
}